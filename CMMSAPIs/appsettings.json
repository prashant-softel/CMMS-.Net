    "Log4Net": {
      "LogLevel": {
        "Default": "Error"
      },
      "Appender": {
        "Name": "AdoNetAppender",
        "Type": "log4net.Appender.AdoNetAppender",
        "BufferSize": "1",
        "ConnectionType": "System.Data.SqlClient.SqlConnection, System.Data.SqlClient",
        "ConnectionStringName": "YourConnectionStringName",
        "CommandText": "INSERT INTO Log ([Date],[Thread],[Level],[Logger], [Message],[Exception]) VALUES (@log_date, @thread, @log_level, @logger, @message, @exception)",
        "Parameters": [
          {
            "Name": "@log_date",
            "DbType": "DateTime",
            "Layout": { "Type": "log4net.Layout.RawTimeStampLayout" }
          },
          {
            "Name": "@thread",
            "DbType": "String",
            "Size": "255",
            "Layout": {
              "Type": "log4net.Layout.PatternLayout",
              "ConversionPattern": "%thread"
            }
          },
          {
            "Name": "@log_level",
            "DbType": "String",
            "Size": "50",
            "Layout": {
              "Type": "log4net.Layout.PatternLayout",
              "ConversionPattern": "%level"
            }
          },
          {
            "Name": "@logger",
            "DbType": "String",
            "Size": "255",
            "Layout": {
              "Type": "log4net.Layout.PatternLayout",
              "ConversionPattern": "%logger"
            }
          },
          {
            "Name": "@message",
            "DbType": "String",
            "Size": "4000",
            "Layout": {
              "Type": "log4net.Layout.PatternLayout",
              "ConversionPattern": "%message"
            }
          },
          {
            "Name": "@exception",
            "DbType": "String",
            "Size": "2000",
            "Layout": { "Type": "log4net.Layout.ExceptionLayout" }
          }
        ]
      }
    }
  },
